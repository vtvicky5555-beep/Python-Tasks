student_name="Akil"
#marks subject wise
subject1=55
subject2=75
subject3=85
#total mark
Total=subject1+subject2+subject3
#Average mark
Avg=Total//3
#Check Pass or fail
passed=(subject1 >=40) and(subject2 >=40)and(subject3>=40)
